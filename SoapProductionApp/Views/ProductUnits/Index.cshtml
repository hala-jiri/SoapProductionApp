@using SoapProductionApp.Models.ProductUnit.ViewModels
@model IEnumerable<ProductUnitOverviewViewModel>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-md-12">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-primary text-white py-2 px-3 d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Product Units Overview</h5>
                </div>
                <div class="card-body small p-3">
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered table-striped wide-table mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 25%;">Recipe</th>
                                    <th style="width: 15%;">Product Type</th>
                                    <th style="width: 15%;">Expiration</th>
                                    <th style="width: 15%;">Cost / Unit</th>
                                    <th style="width: 15%;">Status</th>
                                    <th style="width: 15%;" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var unit in Model)
                                {
                                    <tr>
                                        <td class="align-middle text-truncate" title="@unit.RecipeName">@unit.RecipeName</td>
                                        <td class="align-middle">@unit.ProductType</td>
                                        <td class="align-middle">@unit.ExpirationDate.ToString("dd.MM.yyyy")</td>
                                        <td class="align-middle">@unit.Cost.ToString("0.00") €</td>
                                        <td class="align-middle">@unit.UnsoldUnits / @unit.TotalUnits</td>
                                        <td class="align-middle text-center">
                                            <div class="d-flex justify-content-center flex-wrap">
                                                <a asp-controller="ProductUnits" asp-action="Details" asp-route-cookingId="@unit.CookingId" class="btn btn-info btn-sm action-btn">
                                                    📄 Detail
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>