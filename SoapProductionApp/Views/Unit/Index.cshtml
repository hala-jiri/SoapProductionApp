@model List<SoapProductionApp.Models.Warehouse.Unit>

<h2>Unit management</h2>
<a href="@Url.Action("Create")" class="btn btn-success">Add new Unit</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Abbreviation</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model)
        {
            <tr>
                <td>@unit.Name</td>
                <td>@unit.Abbreviation</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@unit.Id" class="btn btn-warning">Upravit</a>
                    <a asp-action="Delete" asp-route-id="@unit.Id" class="btn btn-danger">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>