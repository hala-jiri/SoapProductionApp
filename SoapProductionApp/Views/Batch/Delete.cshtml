@model SoapProductionApp.Models.Warehouse.ViewModels.BatchViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-danger text-white text-center py-2">
                    <h6 class="mb-0">Delete Batch</h6>
                </div>
                <div class="card-body small p-3">
                    <p class="mb-3 text-center">Are you sure you want to delete this batch?</p>

                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item py-1"><strong>Batch Name:</strong> @Model.Name</li>
                        <li class="list-group-item py-1"><strong>Supplier:</strong> @Model.Supplier</li>
                        <li class="list-group-item py-1"><strong>Purchase Date:</strong> @Model.PurchaseDate.ToString("dd/MM/yyyy")</li>
                        <li class="list-group-item py-1"><strong>Expiration Date:</strong> @(Model.ExpirationDate?.ToString("dd/MM/yyyy") ?? "No Expiration")</li>
                        <li class="list-group-item py-1"><strong>Package Quantity:</strong> @Model.QuantityOfPackage @Model.Unit</li>
                        <li class="list-group-item py-1"><strong>Available Quantity:</strong> @Model.AvailableQuantityOfPackage @Model.Unit</li>
                        <li class="list-group-item py-1"><strong>Price of package (without tax):</strong> @Model.PriceOfPackageWithoutTax €</li>
                        <li class="list-group-item py-1">
                            <strong>Price per unit:</strong> @Model.PricePerUnitWithoutTax €/@Model.Unit
                            (<span class="text-muted">@Model.PricePerUnitWithTax €/@Model.Unit with tax</span>)
                        </li>
                        <li class="list-group-item py-1"><strong>Tax:</strong> @Model.TaxPercentage%</li>
                    </ul>

                    <form asp-action="Delete" method="post" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-action="Details"
                           asp-controller="Warehouse"
                           asp-route-id="@Model.WarehouseItem.Id"
                           class="btn btn-outline-secondary btn-sm">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>