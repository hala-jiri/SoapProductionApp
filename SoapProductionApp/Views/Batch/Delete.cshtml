@model SoapProductionApp.Models.Warehouse.Batch

<h2>Delete Batch</h2>

<p>Are you sure you want to delete this batch?</p>

<ul>
    <li><strong>Batch Name:</strong> @Model.Name</li>
    <li><strong>Supplier:</strong> @Model.Supplier</li>
    <li><strong>Purchase Date:</strong> @Model.PurchaseDate.ToShortDateString()</li>
    <li><strong>Expiration Date:</strong> @(Model.ExpirationDate?.ToShortDateString() ?? "No Expiration")</li>
    <li><strong>Package Quantity:</strong> @Model.QuantityOfPackage @Model.Unit</li>
    <li><strong>Base Quantity:</strong> @Model.QuantityInBaseUnit (Base Unit)</li>
    <li><strong>Available Quantity:</strong> @Model.AvailableQuantity</li>
    <li><strong>Price Per Unit:</strong> @Model.PricePerBaseUnit €</li>
    <li><strong>Price Per Unit with Tax:</strong> @Model.PricePerBaseUnitWithTax €</li>
    <li><strong>Tax Percentage:</strong> @Model.TaxPercentage%</li>
</ul>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>