@model SoapProductionApp.Models.Warehouse.ViewModels.BatchCreateViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">Create Batch of @ViewBag.WarehouseItemName</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="WarehouseItemId" />

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Supplier" class="form-label">Supplier</label>
                            <input asp-for="Supplier" class="form-control" />
                            <span asp-validation-for="Supplier" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PurchaseDate" class="form-label">Purchase Date</label>
                            <input asp-for="PurchaseDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpirationDate" class="form-label">Expiration Date</label>
                            <input asp-for="ExpirationDate" class="form-control" type="date" />
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QuantityOfPackage" class="form-label">Package Quantity (@ViewBag.Unit)</label>
                            <input asp-for="QuantityOfPackage" class="form-control" type="number" step="0.001" />
                            <span asp-validation-for="QuantityOfPackage" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PriceOfPackageWithoutTax" class="form-label">Package Price (without tax)</label>
                            <input asp-for="PriceOfPackageWithoutTax" class="form-control" type="number" step="0.001" />
                            <span asp-validation-for="PriceOfPackageWithoutTax" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Tax</label>
                            <input class="form-control" value="@ViewBag.Tax %" readonly />
                        </div>

                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-success">Create</button>
                            <a asp-controller="Warehouse" asp-action="Details" asp-route-id="@ViewBag.WarehouseItemId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}