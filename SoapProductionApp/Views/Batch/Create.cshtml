@model SoapProductionApp.Models.ViewModels.BatchCreateViewModel

<h2>Create Batch of @ViewBag.WarehouseItemName</h2>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="WarehouseItemId" />
    <div>
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Supplier" class="control-label">Supplier</label>
        <input asp-for="Supplier" class="form-control" />
        <span asp-validation-for="Supplier" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="PurchaseDate" class="control-label">Purchase Date</label>
        <input asp-for="PurchaseDate" class="form-control" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="ExpirationDate" class="control-label">Expiration Date</label>
        <input asp-for="ExpirationDate" class="form-control" type="date" />
        <span asp-validation-for="ExpirationDate" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="QuantityOfPackage" class="control-label">Package Quantity (@ViewBag.Unit)</label>
        <input asp-for="QuantityOfPackage" class="form-control" type="number" step="0.001" />
        <span asp-validation-for="QuantityOfPackage" class="text-danger"></span>
    </div>
    <!-- Cena balení -->
    <div class="form-group">
        <label asp-for="PriceOfPackageWithoutTax" class="control-label">Package Price (without tax)</label>
        <input asp-for="PriceOfPackageWithoutTax" class="form-control" type="number" step="0.001" />
        <span asp-validation-for="PriceOfPackageWithoutTax" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="TaxPercentage" class="control-label">Tax</label>
        <input asp-for="TaxPercentage" class="form-control" />
        <span asp-validation-for="TaxPercentage" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="Warehouse" asp-action="Details" asp-route-id="@Model.WarehouseItemId" class="btn btn-secondary">Zpět</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}