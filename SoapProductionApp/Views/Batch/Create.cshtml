@model SoapProductionApp.Models.Warehouse.Batch

<h2>Create Batch</h2>
<form asp-action="Create" method="post">
    <input type="hidden" asp-for="WarehouseItemId" />
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Supplier</label>
        <input asp-for="Supplier" />
    </div>
    <div>
        <label>Purchase Date</label>
        <input asp-for="PurchaseDate" type="date" />
    </div>
    <div>
        <label>Expiration Date</label>
        <input asp-for="ExpirationDate" type="date" />
    </div>
    <div>
        <label>Package Quantity</label>
        <input asp-for="QuantityOfPackage" />
    </div>
    <div>
        <label>Package Price</label>
        <input asp-for="PriceOfPackage" />
    </div>
    <div>
        <label>Unit</label>
        <select asp-for="Unit">
            @foreach (var unit in Enum.GetValues(typeof(SoapProductionApp.Models.UnitMeasurement.UnitType)))
            {
                <option value="@unit">@unit</option>
            }
        </select>
    </div>
    <div>
        <label>Tax Percentage</label>
        <input asp-for="TaxPercentage" />
    </div>
    <button type="submit">Create</button>
    <a asp-controller="Warehouse" asp-action="Details" asp-route-id="@Model.WarehouseItemId" class="btn btn-secondary">Zpět</a>
</form>