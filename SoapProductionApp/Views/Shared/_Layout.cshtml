<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SoapProductionApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SoapProductionApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/SoapMateLogo.png" alt="SoapMate Logo" class="logo-img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <!-- Levé menu -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-controller="Warehouse" asp-action="Index">
                                <img src="~/Images/Icons/warehouse.png" alt="Warehouse Icon" class="menu-icon">
                                <span class="ms-2">Warehouse</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-area="" asp-controller="Recipe" asp-action="Index">
                                <img src="~/Images/Icons/recipe-book.png" alt="Recipes Icon" class="menu-icon">
                                <span class="ms-2">Recipe</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-controller="Cooking" asp-action="Index">
                                <img src="~/Images/Icons/frying-pan.png" alt="Cooking Icon" class="menu-icon">
                                <span class="ms-2">Cooking</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark d-flex align-items-center" asp-controller="ProductUnits" asp-action="Index">
                                <img src="~/Images/Icons/food-stand.png" alt="Products overview Icon" class="menu-icon">
                                <span class="ms-2">Products Overview</span>
                            </a>
                        </li>
                    </ul>

                    <!-- Pravá část menu (Admin odkazy + přihlášení) -->
                    <ul class="navbar-nav">
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Kategorie</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Backup" asp-action="Index">Backup</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="DatabaseSetup" asp-action="Index">Database Setup</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Admin" asp-action="Index">Správa uživatelů</a>
                            </li>

                        }

                        <!-- Sem vložíme LoginPartial jako poslední položku vpravo -->
                        <li class="nav-item">
                            <partial name="_LoginPartial" />
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SoapProductionApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
