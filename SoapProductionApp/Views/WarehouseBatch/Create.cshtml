@model SoapProductionApp.Models.Warehouse.WarehouseItemBatch
@{
    var item = ViewBag.WarehouseItem as SoapProductionApp.Models.Warehouse.WarehouseItem;
}

<h2>Přidat zásoby pro @item.Name</h2>

<form method="post">
    <input type="hidden" asp-for="WarehouseItemId" />

    <div class="form-group">
        <label>Množství</label>
        <input asp-for="Quantity" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>Cena za jednotku</label>
        <input asp-for="PricePerUnit" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>Datum expirace (nepovinné)</label>
        <input asp-for="ExpirationDate" class="form-control" type="date" />
    </div>

    <button type="submit" class="btn btn-primary">Uložit</button>
</form>