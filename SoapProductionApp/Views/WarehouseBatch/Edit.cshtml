@model SoapProductionApp.Models.Warehouse.WarehouseItemBatch

<h2>Upravit šarži</h2>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Položka</label>
        <select asp-for="WarehouseItemId" class="form-control">
            @foreach (var item in ViewBag.WarehouseItems)
            {
                <option value="@item.Id">@item.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Množství</label>
        <input asp-for="Quantity" type="number" class="form-control">
    </div>
    <div class="form-group">
        <label>Cena za jednotku</label>
        <input asp-for="PricePerUnit" type="number" class="form-control" step="0.01">
    </div>
    <div class="form-group">
        <label>Datum nákupu</label>
        <input asp-for="PurchaseDate" type="date" class="form-control">
    </div>
    <div class="form-group">
        <label>Expirace</label>
        <input asp-for="ExpirationDate" type="date" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">Uložit změny</button>
</form>