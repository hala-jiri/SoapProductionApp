@model SoapProductionApp.Models.Warehouse.WarehouseItemCreateViewModel

<h2>Create Warehouse Item</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DefaultUnit" class="form-label">Default Unit</label>
        <select asp-for="DefaultUnit" class="form-control">
            @foreach (var unit in Model.AvailableUnits)
            {
                <option value="@unit">@unit</option>
            }
        </select>
        <span asp-validation-for="DefaultUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="form-label">Categories</label>
        <div>
            @foreach (var category in Model.AvailableCategories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox"
                           id="category_@category.Id"
                           value="@category.Id"
                           name="SelectedCategoryIds" />
                    <label class="form-check-label" for="category_@category.Id">@category.Name</label>
                </div>
            }
        </div>
    </div>

    <div class="form-group">
        <label asp-for="TaxPercentage" class="form-label">Tax Percentage</label>
        <input asp-for="TaxPercentage" class="form-control" />
        <span asp-validation-for="TaxPercentage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinQuantity" class="form-label">Minimum Quantity</label>
        <input asp-for="MinQuantity" class="form-control" type="number" step="0.1" />
        <span asp-validation-for="MinQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Supplier" class="form-label">Supplier</label>
        <input asp-for="Supplier" class="form-control" />
        <span asp-validation-for="Supplier" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}