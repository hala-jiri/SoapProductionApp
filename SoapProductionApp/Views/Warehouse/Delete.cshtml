@model SoapProductionApp.Models.Warehouse.WarehouseItem

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0">Delete Warehouse Item</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger text-center">
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p class="text-center">Are you sure you want to delete this Warehouse Item?</p>

                    <!-- Strukturovaný přehled informací -->
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td class="text-end">@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Unit:</strong></td>
                                <td class="text-end">@Model.Unit</td>
                            </tr>
                            <tr>
                                <td><strong>Tax Percentage:</strong></td>
                                <td class="text-end">@Model.TaxPercentage %</td>
                            </tr>
                            <tr>
                                <td><strong>Minimum Quantity:</strong></td>
                                <td class="text-end">@Model.MinimumQuantityAlarm @Model.Unit</td>
                            </tr>
                            <tr>
                                <td><strong>Supplier:</strong></td>
                                <td class="text-end">@Model.Suppliers</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <tr>
                                    <td><strong>Notes:</strong></td>
                                    <td class="text-end">@Model.Notes</td>
                                </tr>
                            }
                            @if (Model.Categories.Any())
                            {
                                <tr>
                                    <td><strong>Categories:</strong></td>
                                    <td class="text-end">
                                        @string.Join(", ", Model.Categories.Select(c => c.Name))
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <!-- Formulář pro potvrzení mazání -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>