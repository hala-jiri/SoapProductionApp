@model SoapProductionApp.Models.Warehouse.WarehouseItem

<h2>Delete Warehouse Item</h2>

<p>Are you sure you want to delete this Warehouse Item?</p>

<ul>
    <li><strong>Name:</strong> @Model.Name</li>
    <li><strong>Default Unit:</strong> @Model.DefaultUnit</li>
    <li><strong>Tax Percentage:</strong> @Model.TaxPercentage %</li>
    <li><strong>Minimum Quantity:</strong> @Model.MinQuantity @Model.DefaultUnit</li>
    <li><strong>Supplier:</strong> @Model.Supplier</li>
    <li><strong>Notes:</strong> @Model.Notes</li>
    @if (Model.Categories.Any())
    {
        <li>
            <strong>Categories:</strong>
            <ul>
                @foreach (var category in Model.Categories)
                {
                    <li>@category.Name</li>
                }
            </ul>
        </li>
    }
</ul>

<!-- Formulář pro potvrzení mazání -->
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>