@model SoapProductionApp.Models.Warehouse.WarehouseItem

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-danger text-white text-center py-2">
                    <h6 class="mb-0">Delete Warehouse Item</h6>
                </div>
                <div class="card-body small p-3">
                    <div class="alert alert-danger text-center py-2 mb-3">
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p class="text-center mb-3">Are you sure you want to delete this item?</p>

                    <table class="table table-borderless table-sm mb-3">
                        <tbody>
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td class="text-end">@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Unit:</strong></td>
                                <td class="text-end">@Model.Unit</td>
                            </tr>
                            <tr>
                                <td><strong>Tax:</strong></td>
                                <td class="text-end">@Model.TaxPercentage %</td>
                            </tr>
                            <tr>
                                <td><strong>Minimum Qty:</strong></td>
                                <td class="text-end">@Model.MinimumQuantityAlarm @Model.Unit</td>
                            </tr>
                            <tr>
                                <td><strong>Supplier:</strong></td>
                                <td class="text-end">@Model.Suppliers</td>
                            </tr>
                            @if (!string.IsNullOrEmpty(Model.Notes))
                            {
                                <tr>
                                    <td><strong>Notes:</strong></td>
                                    <td class="text-end">@Model.Notes</td>
                                </tr>
                            }
                            @if (Model.Categories.Any())
                            {
                                <tr>
                                    <td><strong>Categories:</strong></td>
                                    <td class="text-end">
                                        @string.Join(", ", Model.Categories.Select(c => c.Name))
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <form asp-action="Delete" method="post" class="d-grid gap-2">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>