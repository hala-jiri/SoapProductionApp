@model IEnumerable<SoapProductionApp.Models.Warehouse.WarehouseItem>

<h2>Warehouse Items</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Quantity</th>
            <th>Price Per Unit</th>
            <th>Total Material Cost</th>
            <th>Categories</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.TotalQuantityInBaseUnit @item.DefaultUnit</td>
                <td>@item.AveragePricePerBaseUnit</td>
                <td>@item.TotalMaterialCost</td>
                <td>@string.Join(", ", item.Categories.Select(c => c.Name))</td>
                <td>
                    <a href="@Url.Action("Details", "Warehouse", new { id = item.Id })">Details</a> |
                    <a href="@Url.Action("Edit", "Warehouse", new { id = item.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", "Warehouse", new { id = item.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .low-stock-indicator {
        color: red;
        font-weight: bold;
        margin-left: 5px;
        font-size: 18px;
    }

    .badge {
        display: inline-block;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        margin-right: 5px;
    }
</style>