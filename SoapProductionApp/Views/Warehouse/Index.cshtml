@model IEnumerable<SoapProductionApp.Models.Warehouse.WarehouseItem>

<h2>Warehouse Items</h2>

<!-- Tlačítko pro přidání nové skladové položky -->
<a asp-action="Create" class="btn btn-success mb-3">Add New Warehouse Item</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Total Quantity</th>
            <th>Price Per Unit (with Tax)</th>
            <th>Total Value</th>
            <th>Categories</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    @item.TotalAvailableQuantity @item.Unit
                    @if (item.TotalAvailableQuantity <= item.MinimumQuantityAlarm)
                    {
                        <span class="low-stock-indicator" title="Nízká zásoba!">⚠️</span>
                    }
                </td>
                <td>@item.AveragePricePerUnitWithoutTax.ToString("0.000") € / @item.Unit</td>
                <td>@item.TotalMaterialValueWithoutTax.ToString("0.000") €</td>
                <td>
                    @if (item.Categories != null && item.Categories.Any())
                    {
                        foreach (var category in item.Categories)
                        {
                            <span class="badge" style="background-color: @category.ColorBackground; color: @category.ColorText;">
                                @category.Name
                            </span>
                        }
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    <!-- Odkaz na detail skladové položky -->
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>

                    <!-- Odkaz na editaci skladové položky -->
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>

                    <!-- Odkaz na smazání skladové položky -->
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .low-stock-indicator {
        color: red;
        font-weight: bold;
        margin-left: 5px;
        font-size: 18px;
    }

    .badge {
        display: inline-block;
        padding: 5px 10px;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        margin-right: 5px;
    }
</style>