@model SoapProductionApp.Models.Warehouse.WarehouseItemCreateViewModel

<h2>Upravit položku: @Model.Name</h2>

<form method="post">
    <div class="form-group">
        <label>Název</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label>Množství</label>
        <input asp-for="Quantity" type="number" class="form-control" />
    </div>

    <div class="form-group">
        <label>Jednotka</label>
        <select asp-for="SelectedUnitId" class="form-control">
            @foreach (var unit in Model.AvailableUnits)
            {
                <option value="@unit.Id" selected="@(unit.Id == Model.SelectedUnitId ? "selected" : null)">@unit.Name</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Kategorie</label>
        @foreach (var category in Model.AvailableCategories)
        {
            <div class="form-check">
                <input type="checkbox" name="SelectedCategoryIds" value="@category.Id" class="form-check-input"
                @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "")>
                <label class="form-check-label">@category.Name</label>
            </div>
        }
    </div>

    <div class="form-group">
        <label>Cena za jednotku</label>
        <input asp-for="PricePerUnit" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>DPH (%)</label>
        <input asp-for="TaxPercentage" class="form-control" type="number" step="0.1" />
    </div>

    <div class="form-group">
        <label>Minimální množství pro upozornění</label>
        <input asp-for="MinQuantity" class="form-control" type="number" step="0.01" />
    </div>

    <div class="form-group">
        <label>Dodavatel</label>
        <input asp-for="Supplier" class="form-control" />
    </div>

    <div class="form-group">
        <label>Poznámky</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Uložit změny</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Zpět</a>