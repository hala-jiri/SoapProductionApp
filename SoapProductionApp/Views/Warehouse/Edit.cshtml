@model SoapProductionApp.Models.Warehouse.WarehouseItemCreateViewModel

<h2>Edit Warehouse Item</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Default Unit</label>
        <select asp-for="DefaultUnit">
            @foreach (var unit in Model.AvailableUnits)
            {
                <option value="@unit" selected="@(unit == Model.DefaultUnit)">@unit</option>
            }
        </select>
    </div>
    <div>
        <label>Tax Percentage</label>
        <input asp-for="TaxPercentage" />
    </div>
    <div>
        <label>Minimum Quantity</label>
        <input asp-for="MinQuantity" />
    </div>
    <div>
        <label>Supplier</label>
        <input asp-for="Supplier" />
    </div>
    <div>
        <label>Notes</label>
        <textarea asp-for="Notes"></textarea>
    </div>
    <button type="submit">Save Changes</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Zpět</a>