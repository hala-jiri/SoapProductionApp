@model SoapProductionApp.Models.Warehouse.WarehouseItem

<h2>Detail produktu: @Model.Name</h2>

<p>
    <strong>Kategorie:</strong>
    @foreach (var category in Model.Categories)
    {
        <span>@category.Name </span>
    }
</p>
<p><strong>Dodavatel:</strong> @Model.Supplier</p>
<p><strong>Jednotka:</strong> @Model.Unit.Name</p>
<p><strong>Cena za jednotku:</strong> @Model.PricePerUnit Kč</p>
<p><strong>DPH:</strong> @Model.TaxPercentage %</p>
<p><strong>Cena s DPH:</strong> @Model.PriceWithTax Kč</p>
<p><strong>Celkové množství na skladě:</strong> @Model.Quantity @Model.Unit.Name</p>
<p><strong>Minimální množství před upozorněním:</strong> @Model.MinQuantity @Model.Unit.Name</p>
<p><strong>Poznámky:</strong> @Model.Notes</p>

<h3>Historie nákupů:</h3>

<table class="table">
    <thead>
        <tr>
            <th>Datum nákupu</th>
            <th>Množství</th>
            <th>Cena za jednotku</th>
            <th>Expirace</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var batch in Model.Batches) @* Opraveno z WarehouseItemBatches na Batches *@
        {
            <tr>
                <td>@batch.PurchaseDate.ToShortDateString()</td>
                <td>@batch.Quantity @Model.Unit.Name</td>
                <td>@batch.PricePerUnit Kč</td>
                <td>@(batch.ExpirationDate?.ToShortDateString() ?? "N/A")</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Zpět</a>