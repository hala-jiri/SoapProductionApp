@model SoapProductionApp.Models.Warehouse.WarehouseItem

<h2>@Model.Name</h2>

<p>
    <strong>Celkové množství:</strong> @Model.TotalQuantityInBaseUnit @Model.DefaultUnit
    @if (@Model.TotalQuantityInBaseUnit <= @Model.MinQuantity)
    {
        <span class="low-stock-indicator" title="Nízká zásoba!">⚠️</span>
    }
</p>
<p><strong>Průměrná cena za základní jednotku:</strong> @Model.AveragePricePerBaseUnit.ToString("0.00") €</p>
<p><strong>DPH:</strong> @Model.TaxPercentage %</p>
<p><strong>Cena s DPH:</strong> @Model.PriceWithTax.ToString("0.00") €</p>
<p><strong>Minimální množství:</strong> @Model.MinQuantity @Model.DefaultUnit</p>
<p><strong>Dodavatel:</strong> @Model.Supplier</p>
<p><strong>Poznámky:</strong> @Model.Notes</p>

<h3>Šarže</h3>
<a asp-controller="Batch" asp-action="Create" asp-route-warehouseItemId="@Model.Id" class="btn btn-success">Přidat šarži</a>

<table class="table">
    <thead>
        <tr>
            <th>Datum nákupu</th>
            <th>Expirace</th>
            <th>Množství (v základní jednotce)</th>
            <th>Cena za jednotku</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var batch in Model.Batches.OrderBy(b => b.ExpirationDate))
        {
            <tr>
                <td>@batch.PurchaseDate.ToShortDateString()</td>
                <td>@(batch.ExpirationDate.HasValue ? batch.ExpirationDate.Value.ToShortDateString() : "Neomezená")</td>
                <td>@batch.QuantityInBaseUnit</td>
                <td>@batch.PricePerBaseUnit.ToString("0.00") €</td>
                <td>
                    <a asp-controller="Batch" asp-action="Edit" asp-route-id="@batch.Id" class="btn btn-warning">Upravit</a>
                    <a asp-controller="Batch" asp-action="Delete" asp-route-id="@batch.Id" class="btn btn-danger">Smazat</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Zpět</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Upravit</a>

<style>
    .low-stock-indicator {
        color: red;
        font-weight: bold;
        margin-left: 5px;
        font-size: 18px;
    }
</style>