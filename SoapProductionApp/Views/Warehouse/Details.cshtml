@model SoapProductionApp.Models.Warehouse.WarehouseItem

<h2>@Model.Name</h2>

<p><strong>Celkové množství:</strong> @Model.Quantity @Model.Unit.Name</p>
<p><strong>Průměrná cena za jednotku:</strong> @Model.PricePerUnit.ToString("0.00") €</p>
<p><strong>DPH:</strong> @Model.TaxPercentage %</p>
<p><strong>Cena s DPH:</strong> @Model.PriceWithTax.ToString("0.00") €</p>
<p><strong>Minimální množství:</strong> @Model.MinQuantity</p>
<p><strong>Dodavatel:</strong> @Model.Supplier</p>
<p><strong>Poznámky:</strong> @Model.Notes</p>

<h3>Šarže</h3>
<table class="table">
    <thead>
        <tr>
            <th>Datum nákupu</th>
            <th>Expirace</th>
            <th>Množství</th>
            <th>Cena za jednotku</th>
            <th>Zbývá</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var batch in Model.Batches.OrderBy(b => b.ExpirationDate))
        {
            <tr>
                <td>@batch.PurchaseDate.ToShortDateString()</td>
                <td>@(batch.ExpirationDate.HasValue ? batch.ExpirationDate.Value.ToShortDateString() : "Neomezená")</td>
                <td>@batch.Quantity @Model.Unit.Name</td>
                <td>@batch.PricePerUnit.ToString("0.00") €</td>
                <td>@batch.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>