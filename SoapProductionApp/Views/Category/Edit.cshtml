@model SoapProductionApp.Models.Warehouse.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name">Category Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ColorBackground">Background Color</label>
        <input asp-for="ColorBackground" type="color" class="form-control" />
        <span asp-validation-for="ColorBackground" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ColorText">Text Color</label>
        <input asp-for="ColorText" type="color" class="form-control" />
        <span asp-validation-for="ColorText" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>