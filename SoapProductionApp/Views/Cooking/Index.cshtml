@model IEnumerable<SoapProductionApp.Models.Cooking.Cooking>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-xl-12 col-lg-12 col-md-12">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Cooking Processes</h3>
                    <a asp-action="Create" class="btn btn-light btn-sm">➕ Start Cooking</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="bg-light">
                                <tr>
                                    <th>Recipe Name</th>
                                    <th>Batch Size</th>
                                    <th>Cost per Soap (€)</th>
                                    <th>Cooking Date</th>
                                    <th>Curing Date</th>
                                    <th>Cut</th>
                                    <th>Ready to Sell</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cooking in Model)
                                {
                                    <tr>
                                        <td>@cooking.Recipe.Name</td>
                                        <td>@cooking.BatchSize</td>
                                        <td>@cooking.CostPerSoap.ToString("0.00") €</td>
                                        <td>@cooking.CookingDate.ToShortDateString()</td>
                                        <td>@cooking.CuringDate.ToShortDateString()</td>
                                        <td class="text-center">
                                            @if (cooking.IsCut)
                                            {
                                                <span class="text-success">✅</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">❌</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            @if (cooking.IsReadyToBeSold)
                                            {
                                                <span class="text-success">✅</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">❌</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@cooking.Id" class="btn btn-info btn-sm">👁 View</a>
                                            <a asp-action="Edit" asp-route-id="@cooking.Id" class="btn btn-warning btn-sm">✏ Edit</a>
                                            <a asp-action="Delete" asp-route-id="@cooking.Id" class="btn btn-danger btn-sm">🗑 Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>