@model SoapProductionApp.Models.Recipe.ViewModels.RecipeCreateEditViewModel

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-sm rounded-3">
                <div class="card-header bg-danger text-white text-center py-2">
                    <h5 class="mb-0">Delete Recipe</h5>
                </div>
                <div class="card-body small p-3">
                    <div class="alert alert-danger text-center py-2">
                        <strong>Warning:</strong> This action cannot be undone!
                    </div>

                    <p class="text-center mb-3">Are you sure you want to delete this recipe?</p>

                    <!-- Recept info -->
                    <table class="table table-borderless table-sm mb-3">
                        <tbody>
                            <tr>
                                <td colspan="2" class="text-center">
                                    <img src="@Model.ImageUrl"
                                         class="img-fluid rounded shadow-sm"
                                         alt="Recipe Image"
                                         style="max-width: 220px; max-height: 130px; object-fit: cover;" />
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Name:</strong></td>
                                <td class="text-end">@Model.Name</td>
                            </tr>
                            <tr>
                                <td><strong>Product Type:</strong></td>
                                <td class="text-end">@Model.ProductType</td>
                            </tr>
                            <tr>
                                <td><strong>Batch Size:</strong></td>
                                <td class="text-end">@Model.BatchSize</td>
                            </tr>
                            <tr>
                                <td><strong>Days to Cure:</strong></td>
                                <td class="text-end">@Model.DaysOfCure</td>
                            </tr>
                            <tr>
                                <td><strong>Note:</strong></td>
                                <td class="text-end">@Model.Note</td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Ingredience -->
                    <h6 class="mt-3">Ingredients</h6>
                    <table class="table table-sm table-striped mb-3">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th class="text-end">Quantity</th>
                                <th class="text-end">Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ingredient in Model.Ingredients)
                            {
                                <tr>
                                    <td>@ingredient.WarehouseItemName</td>
                                    <td class="text-end">@ingredient.Quantity.ToString("0.00") @ingredient.Unit</td>
                                    <td class="text-end">@ingredient.Cost.ToString("0.00") €</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <p class="text-end small mt-2">
                        <strong>Total Cost:</strong>
                        <span class="fw-bold">@Model.Ingredients.Sum(i => i.Cost).ToString("0.00") €</span>
                    </p>

                    <!-- Delete Form -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 mt-3">
                            <button type="submit" class="btn btn-danger btn-sm">🗑️ Delete</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-sm">🔙 Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>